<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for localhost during development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.0.0/16</domain>
    </domain-config>

    <!-- Production domain with strict security -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">marathicounter.com</domain>
        <pin-set expiration="2025-12-31">
            <!-- Add your SSL certificate pins here for production -->
        </pin-set>
    </domain-config>

    <!-- Trust user-added certificates for debugging -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
